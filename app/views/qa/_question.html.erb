<%# Q&A question card partial %>
<div class="bg-white rounded-lg shadow p-4">
  <div class="flex items-start space-x-4">
    <div class="flex-shrink-0">
      <% if question.user.avatar.attached? %>
        <%= image_tag question.user.avatar, class: "w-10 h-10 rounded-full" %>
      <% else %>
        <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center">
          <span class="text-gray-500 text-sm">
            <%= question.user.initials %>
          </span>
        </div>
      <% end %>
    </div>

    <div class="flex-1">
      <div class="flex items-center justify-between mb-2">
        <div class="flex items-center space-x-2">
          <span class="font-medium text-gray-900">
            <%= question.user.name %>
          </span>
          <span class="text-gray-500 text-sm">
            <%= time_ago_in_words(question.created_at) %> ago
          </span>
        </div>
        <% if question.answers_count > 0 %>
          <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded">
            <%= pluralize(question.answers_count, 'answer') %>
          </span>
        <% end %>
      </div>

      <h3 class="text-lg font-semibold mb-2">
        <%= link_to question.title, qa_path(question), class: "hover:text-blue-600" %>
      </h3>

      <p class="text-gray-600 text-sm mb-3 line-clamp-2">
        <%= question.content %>
      </p>

      <div class="flex items-center space-x-4">
        <div class="flex items-center space-x-2">
          <button class="text-gray-500 hover:text-blue-600">
            <i class="fas fa-thumbs-up"></i>
            <span class="ml-1"><%= question.upvotes_count %></span>
          </button>
          <button class="text-gray-500 hover:text-red-600">
            <i class="fas fa-thumbs-down"></i>
            <span class="ml-1"><%= question.downvotes_count %></span>
          </button>
        </div>

        <div class="flex items-center space-x-2">
          <% question.tags.each do |tag| %>
            <span class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-800 rounded">
              <%= tag.name %>
            </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 